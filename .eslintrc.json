{
  "extends": "next/core-web-vitals",
  "rules": {
    "semi": ["warn", "always"],
    "no-var": "warn",
    "newline-before-return": "warn",
    "space-before-blocks": "warn",
    "block-spacing": "warn",
    "lines-around-comment": ["warn", { "beforeLineComment": true}],
    "padding-line-between-statements": [
      "warn",
      { "blankLine": "always", "prev": ["const", "let"], "next": ["function", "try"]},
      { "blankLine": "always", "prev": "*", "next": ["function", "try", "if"]}
    ],
    "no-unused-vars": "warn"
  }
}
